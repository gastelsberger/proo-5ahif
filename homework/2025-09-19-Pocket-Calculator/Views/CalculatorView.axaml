<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:_2025_09_19_Pocket_Calculator.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="_2025_09_19_Pocket_Calculator.Views.CalculatorView"
        x:DataType="vm:CalculatorViewModel"
        Title="Calculator"
        Width="400" Height="500"
        CanResize="False">

<Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
  </Grid.RowDefinitions>

  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>

  <TextBlock Grid.Row="0" Grid.ColumnSpan="4" 
             Text="{Binding Display}" 
             FontSize="24" 
             HorizontalAlignment="Right"
             VerticalAlignment="Center"
             Margin="10"/>

  <Button Grid.Row="1" Grid.Column="0" Content="7" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="7"/>
  <Button Grid.Row="1" Grid.Column="1" Content="8" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="8"/>
  <Button Grid.Row="1" Grid.Column="2" Content="9" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="9"/>
  
  <Button Grid.Row="1" Grid.Column="3" Content="/" 
          Command="{Binding OperatorPressedCommand}" 
          CommandParameter="/"/>

  <Button Grid.Row="2" Grid.Column="0" Content="4" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="4"/>
  <Button Grid.Row="2" Grid.Column="1" Content="5" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="5"/>
  <Button Grid.Row="2" Grid.Column="2" Content="6" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="6"/>
  <Button Grid.Row="2" Grid.Column="3" Content="*" 
          Command="{Binding OperatorPressedCommand}" 
          CommandParameter="*"/>

  <Button Grid.Row="3" Grid.Column="0" Content="1" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="1"/>
  <Button Grid.Row="3" Grid.Column="1" Content="2" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="2"/>
  <Button Grid.Row="3" Grid.Column="2" Content="3" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="3"/>
  <Button Grid.Row="3" Grid.Column="3" Content="-" 
          Command="{Binding OperatorPressedCommand}" 
          CommandParameter="-"/>

  <Button Grid.Row="4" Grid.Column="0" Content="0" 
          Command="{Binding NumberPressedCommand}" 
          CommandParameter="0"/>
  <Button Grid.Row="4" Grid.Column="1" Content="C" 
          Command="{Binding ClearCommand}"/>
  <Button Grid.Row="4" Grid.Column="2" Content="+" 
          Command="{Binding OperatorPressedCommand}" 
          CommandParameter="+"/>
  <Button Grid.Row="4" Grid.Column="3" Content="=" 
          Command="{Binding CalculateCommand}"/>
</Grid>
</Window>
